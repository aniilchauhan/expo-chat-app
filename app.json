{
  "expo": {
    "name": "ChatApp",
    "slug": "chat-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.png",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#8B5CF6"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.chatapp.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow camera access to make video calls",
        "NSMicrophoneUsageDescription": "Allow microphone access to make voice and video calls",
        "NSPhotoLibraryUsageDescription": "Allow photo library access to share images",
        "NSContactsUsageDescription": "Allow contacts access to find friends on ChatApp"
      }
    },
    "android": {
      "package": "com.chatapp.mobile",
      "versionCode": 1,
      "backgroundColor": "#FFFFFF",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#8B5CF6"
      },
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_CONTACTS",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "VIBRATE"
      ]
    },
    "web": {},
    "sdkVersion": "53.0.0",
    "plugins": [
      "expo-font",
      "expo-localization"
    ],
    "extra": {
      "eas": {
        "projectId": "7683e63e-c6c6-4ba0-b297-050b06734946"
      }
    }
  }
}
